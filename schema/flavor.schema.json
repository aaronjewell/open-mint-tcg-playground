{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Flavor",
  "type": "object",
  "required": [
    "type",
    "properties",
    "palette",
    "biome",
    "title",
    "text",
    "image",
    "tags"
  ],
  "properties": {
    "properties": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["key", "label", "value"],
        "properties": {
          "key": { "type": "string" },
          "label": { "type": "string" },
          "value": { "type": "number" }
        },
        "additionalProperties": false
      }
    },
    "palette": { "type": "string" },
    "type": { "type": "string" },
    "title": { "type": "string" },
    "text": { "type": "string" },
    "image": {
      "type": "object",
      "required": ["style", "description"],
      "properties": {
        "style": { "type": "string" },
        "description": { "type": "string" },
        "negative": { "type": "string" }
      }
    },
    "tags": { "type": "array", "items": { "type": "string" } }
  },
  "additionalProperties": false
}


